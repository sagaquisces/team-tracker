<!--team-members-form.vtl-->
<h1>Add a member to $team.getName()</h1>

<form action="/members" method="post">

  <input id="teamId" name="teamId" type="hidden" value="$team.getId()">
  <label for="name">Member Name</label>
  <input id="name" name="name" type="text"><br />

  <label for="organization">Member organization</label>
  <input id="organization" name="organization" type="text">

  <button type="submit" class="btn btn-default">Add member</button>
</form>
